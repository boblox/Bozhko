        <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="#">Site name</a>
</div>

<div class="collapse navbar-collapse" id="navigation">
    <ul class="nav navbar-nav">
        @{
            var dict = new ViewDataDictionary(ViewData) { { "menuItem", homePage } };

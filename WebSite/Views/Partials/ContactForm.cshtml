@model ContactForm

@if (TempData["Form received"] != null)
{
    <p class="text-center">
        <strong>@Localization.ContactFormReceived</strong>
    </p>
}
else
{
    using (Html.BeginUmbracoForm<ContactFormController>("Send", null, new { @class = "form-horizontal contact-form", role = "form" }))
    {
        @CommonHelpers.ContactFormEditor(Html, model => model.NameSurname, Html.EditorFor)
        @CommonHelpers.ContactFormEditor(Html, model => model.Description, Html.EditorFor)
        @CommonHelpers.ContactFormEditor(Html, model => model.Hours, Html.EditorFor)
        @CommonHelpers.ContactFormEditor(Html, model => model.IsPostProcessingNeeded, Html.EditorFor)
        @CommonHelpers.ContactFormEditor(Html, model => model.IsStudioBookingNeeded, Html.EditorFor)
        @Html.HiddenFor(model => model.EmailFrom)
        @Html.HiddenFor(model => model.EmailTo)

    <div class="form-group">
        <div class="col-sm-offset-9 col-sm-2">
            <input type="submit" class="btn btn-default" value="@Localization.ContactFormSend" />
        </div>
    </div>
    }
}

